<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffffff">

    <!-- Titre d'enregistrement -->
    <TextView
        android:id="@+id/registration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Here?"
        android:textSize="35sp"
        android:textColor="#000000"
        android:layout_marginTop="32dp" />

    <!-- Description d'enregistrement -->
    <TextView
        android:id="@+id/registration_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter basic information below to create your brevistay account."
        android:textSize="23sp"
        android:textColor="#373c40"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="4dp" />

    <!-- Formulaire d'inscription -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!-- Champ PrÃ©nom -->
        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter First Name"
            android:background="#c2c3c5"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:inputType="text" />

        <!-- Champ Nom -->
        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Last Name"
            android:background="#c2c3c5"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:inputType="text" />

        <!-- Champ Email -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Email"
            android:background="#c2c3c5"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:inputType="textEmailAddress" />

        <!-- Champ Mot de Passe -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="#c2c3c5"
            android:padding="16dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter Password"
                android:textSize="18sp"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/password_toggle_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_visibility"
                android:contentDescription="Toggle Password Visibility"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Bouton d'enregistrement -->
        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="#26e515"
            android:layout_marginTop="32dp"
            android:padding="14dp" />
    </LinearLayout>

    <!-- Lien pour la page de connexion -->
    <TextView
        android:id="@+id/login_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an Account? Login"
        android:textColor="#db79eb"
        android:gravity="center"
        android:layout_marginTop="20dp" />
</LinearLayout>
