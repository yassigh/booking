<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:gravity="center"
    tools:context=".detail"
    android:id="@+id/main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/aa"
        android:scaleType="centerCrop" />

    <!-- Hotel Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
                android:contentDescription="Rating" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.4 (269 ratings)"
                android:textSize="16sp"
                android:paddingStart="5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/hotelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Name"
            android:textSize="20sp"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Under Valnai Metro Station, Marve Road\nLink Road Junction, Mith Chowki, Malad"
            android:textSize="16sp"
            android:textColor="#484c4f"
            android:layout_marginTop="5dp" />

        <!-- RecyclerView for Amenity List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/amenityRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <!-- Booking Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:padding="16dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 days\n60 $"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginEnd="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:background="@drawable/button_background"
            android:padding="10dp"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>
